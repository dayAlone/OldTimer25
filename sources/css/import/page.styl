.mouse
    position fixed
    right 40px
    bottom 40px
    margin-left -25px
    &__frame
        height 31px
        width 20px
        border-radius 10px
        transform none
        border 2px solid white
        left -1px
        position relative
    &__wheel
        height 5px
        width 2px
        display block
        margin 5px auto
        background white
        position relative
        animation mouse-wheel 1.2s ease infinite
    &__arrows
        margin-top 6px
        span
            display block
            width 6px
            height 6px
            transform rotate(45deg)
            border-right 2px solid white
            border-bottom 2px solid white
            margin 0 0 3px 6px
            &.unu
                animation-delay .1s
                animation-direction alternate

            &.unu, &.doi, &.trei
                animation mouse-scroll 1s infinite

            &.doi
                animation-delay .2s

            &.trei
                animation-delay .3s
                animation-direction alternate

@keyframes mouse-wheel
    0%
        opacity: 1
        transform: translateY(0)
    100%
        opacity: 0
        transform: translateY(6px)

@keyframes mouse-scroll
    0%
        opacity: 0
    50%
        opacity: .5
    100%
        opacity: 1

.page
    full-width()
    padding-bottom 50px
    .index &
        padding-bottom 120px
        background url(/layout/images/footer.bg.png) bottom center no-repeat
    .reasons &
        padding-bottom 120px
        background url(/layout/images/footer.reasons.jpg) bottom center no-repeat
    h2
        font-family 'Oranienbaum'
        font-size 70px
        display inline-block
        position relative
        margin-bottom 70px
        span
            width 100%
            font-size 20px
            vertical-align top
            position absolute
            font-style italic
            font-family 'Georgia'
            left 0
            bottom -28px
            &:before, &:after
                content ""
                position absolute
                width 33%
                top 54%
                border-bottom 1px solid red
            &:before
                left 0%

            &:after
                right 0%

    h3
        font-size 40px
        font-family 'Oranienbaum'
        span
            color red
    h4
        font-size 20px
        line-height 26px
        margin-bottom 0
    h6
        text-transform uppercase
        color orange
        font-weight bold
        font-size 14px
        letter-spacing 3px
        display inline-block
        margin-right 5px
    .form
        display inline-block
        vertical-align middle
        margin-top -14px
        margin-left 5px
        .parsley-errors-list
            display none
        &__message
            position relative
            top 2px
            margin-left 15px
            opacity 0
            pointer-events none
            position absolute
        &--success
            .form__message
                opacity 1
            input
                opacity 0
                pointer-events none
        input
            height 35px
            padding 0 10px
            border 1px solid transparent
            font-size 14px
            margin-left 5px
            position relative
            z-index 4
            t opacity
            &.parsley-error
                border-color red
            &[type='submit']
                text-align center
                background-color #4c0114
                width 123px
                position relative
                top -1px
                t all
                &:hover
                    background-color orange

            &[type='email'], &[type='text']
                background-color alpha(#4c0114, .4)
                width 292px
                font-size 14px
                display inline-block
                placeholder(color white,font-size 14px,)
            &[type='text']
                width 125px
    .social
        size 35px
        display inline-block
        vertical-align top
        margin-top 6px
        background-color #630421
        text-align center
        line-height 35px
        margin-left 15px
        &:hover
            background-color red
        img
            max-height 17px
            max-width 12px
            vertical-align middle
    p
        &.highlight
            width 100%
            border 1px solid orange
            font-family 'Oranienbaum'
            margin 30px 0 55px
            padding 20px 0
            font-size 35px
            line-height 41px
    .slider
        padding 30px 60px 45px
        position relative
        &__arrow
            position absolute
            top 50%
            transform translateY(-50%)
            z-index 100
            t opacity
            &--next
                right 0
            &--prev
                left 0
            &:hover
                opacity .5
        &__description
            margin-right 40px
            margin-left 40px
            p
                font-size 16px

        .fotorama
            box-shadow 0 0 0 1px gray, 0 0 0 12px white
            background-color white

            &__arr
                display none

        & + p
            font-size 18px
            color cyan
            margin-bottom 35px
            & + .center
                margin-bottom 100px
        &--quotes
            padding-left 0
            padding-right 0
            .fotorama
                box-shadow none
                background transparent url(/layout/images/slider.png) center center
                background-size cover
            .slider
                &__arrow
                    margin-top -3px
                    img
                        max-width 15px
                &__item
                    height 450px
                    background-size cover
    img[src='/layout/images/divider.png']
        max-width 100%
    .authors
        margin-right -15px
        margin-left -15px
        margin-top -20px
        margin-bottom 15px
        &__item
            display inline-block
            text-align left
            color white
            margin 0 11px
            position relative
            &--active, &:hover
                color orange
            &:after
                top -26px
                left: 50%
                border: solid transparent
                content: " "
                height: 0
                width: 0
                position: absolute
                pointer-events: none
                border-color: rgba(136, 183, 213, 0)
                border-top-color: #590524
                border-width: 17px
                margin-left: -17px
                t opacity
                opacity 0
            &--active:after
                opacity 1

    .quote
        line-height 450px
        &__avatar
            size 150px
            background-size cover
            border-radius 50%
            border 5px solid white
            margin-bottom 15px
            display inline-block
        &__name
            font-family 'Oranienbaum'
            font-size 35px
            margin-bottom 15px
        &__info
            color orange
            text-transform uppercase
            font-weight bold
            letter-spacing 4px
            margin-bottom 20px
        &__text
            font-size 19px
            line-height 26px
        &__content
            middle()
            text-align center
            padding 0 100px
            line-height 1
    .year
        transition .3s opacity, .3s min-height
        &--disable
            opacity 0
        .row
            margin-top 40px
        &__image
            background-size contain
            background-repeat no-repeat
            padding-bottom 110%
            width 105%
        &__title
            font-size 35px
            margin-top 10px
            font-family 'Oranienbaum'
            line-height 1.1
            margin-bottom 7px
        &__divider
            margin 15px 0 20px
        &__description
            color cyan
            font-size 18px
            line-height 24px
    .nav-tabs
        padding-left 0
        border-bottom 1px solid #0069c6
        float left
        margin-bottom 50px
        li
            list-style none
            display block
            float left
            text-align center
            border 1px solid transparent
            t border
            border-bottom 0
            &.active
                border-color #0069c6
                a
                    color white
            a
                display inline-block
                width 100%
                padding 12px 51px 8px
                font-size 20px
                color #0069c6
    .tab-content
        full-width()
    .tab-pane
        display none
        &.active
            display block
    .years
        text-align center
        margin-right -68px
        margin-left -68px
        margin-top 5px
        margin-bottom 50px
        &__item
            width (100/8)%
            font-size 25px
            display inline-block
            color white
            font-family 'BebasNeue'
            position relative
            &:first-of-type
                padding-left 33px
            &:last-of-type
                padding-right 33px
            &:hover, &:hover + .years__item, &--active, &--active + .years__item
                color red
            &:after
                position absolute
                content ""
                top -17px
                width 1px
                height 7px
                left 50%
                background-color blue2
            &:before
                width 50%
                height 100%
                content ""
                left 100%
                position absolute
    .preview
        margin-bottom 45px
        &__image
            width 100%
            height 215px
            background-size cover
            background-position center center
            box-shadow inset 0 0 0 1px gray
            border 11px solid white
            margin-bottom 20px
            display block
            &:hover + a.preview__title
                color red
                .gallery &
                    color orange
        &__text
            color cyan
            font-size 15px
            line-height 22px
            a
                color white
                border-line(alpha(white, .5))
            .gallery &
                color alpha(white,.8)
        &__title
            font-size 24px
            line-height 30px
            color white
            margin-bottom 20px
            display block

        a.preview__title
            &:hover
                color red
                .gallery &
                    color orange
    iframe + p
        a
            color white
            border-line(alpha(@color, .5))
            &:hover
                color red
                border-line(alpha(@color, .5))
.divider
    display inline-block
    margin 60px 0
    border-bottom 3px solid red
    width 75px
    &--blue
        border-color blue2
    &--yellow
        border-color #ff9218
    &--thin
        width 100%
        border-width 1px
        border-color white

.button
    middle()
    height 44px
    line-height 49px
    min-width 220px
    padding 0 45px
    text-transform uppercase
    font-family 'BebasNeue'
    font-size 20px
    background-color red
    text-align center
    color white
    letter-spacing 4px
    border 0
    display inline-block
    t all
    & + .button
        margin-left 20px
    &:hover, &:focus
        color white
        transform translateY(-5px)
        box-shadow 3px 4px 0 0 alpha(red, .2)
    &--blue
        background-color blue2
        & + .button
            margin-left 40px
        &:hover
            box-shadow 3px 4px 0 0 alpha(blue, .2)
    &--orange
        background-color #ff9218
        &:hover
            box-shadow 3px 4px 0 0 alpha(#ff9218, .2)
    &--brown
        background-color #630421
        &:hover
            box-shadow 3px 4px 0 0 alpha(#630421, .2)
.cards
    &__description
        @extend .page h2 span
        position relative
        font-size 16px
        color #f19729
        full-width()
        bottom 0
        margin 15px 0 25px
        &:before, &:after
            border-color @color
.card
    width 20%
    float left
    img
        max-width 100%
    &__label
        &:after
            size 30px
            content ""
            display inline-block
            border-radius 50%
            margin 25px 0
            border 1px solid #dadada
            t all
            box-shadow inset 0 0 0 3px #8d1d00
            input:checked + &
                background-color #ff9218

.page
    padding-bottom 50px
    .index &
        padding-bottom 120px
        background url(/layout/images/footer.bg.jpg) bottom center no-repeat
    .reasons &
        padding-bottom 120px
        background url(/layout/images/footer.reasons.jpg) bottom center no-repeat
    h2
        font-family 'Oranienbaum'
        font-size 70px
        display inline-block
        position relative
        margin-bottom 70px
        span
            width 100%
            font-size 20px
            vertical-align top
            position absolute
            font-style italic
            font-family 'Georgia'
            left 0
            bottom -28px
            &:before, &:after
                content ""
                position absolute
                width 33%
                top 54%
                border-bottom 1px solid red
            &:before
                left 0%

            &:after
                right 0%

    h3
        font-size 40px
        font-family 'Oranienbaum'
        span
            color red
    .slider
        padding 30px 60px 45px
        position relative
        &__arrow
            position absolute
            top 50%
            transform translateY(-50%)
            t opacity
            &--next
                right 0
            &--prev
                left 0
            &:hover
                opacity .5
        .fotorama
            box-shadow 0 0 0 1px gray, 0 0 0 12px white
            background-color white

            &__arr
                display none
        & + p
            font-size 18px
            color cyan
            margin-bottom 35px
            & + .center
                margin-bottom 100px
    .year
        margin-bottom 40px
        &__image
            background-size cover
            padding-bottom 100%
            border 1px solid gray
            &-frame
                padding 11px
                border 1px solid #0069c6
        &__title
            font-size 35px
            margin-top 10px
            font-family 'Oranienbaum'
        &__divider
            margin 15px 0 20px
        &__description
            color cyan
            font-size 18px
            line-height 24px
    .nav-tabs
        padding-left 0
        border-bottom 1px solid #0069c6
        float left
        margin-bottom 50px
        li
            list-style none
            display block
            float left
            text-align center
            border 1px solid transparent
            t border
            border-bottom 0
            &.active
                border-color #0069c6
                a
                    color white
            a
                display inline-block
                width 100%
                padding 12px 51px 8px
                font-size 20px
                color #0069c6
    .tab-content
        full-width()
    .tab-pane
        display none
        &.active
            display block
    .years
        text-align center
        margin-right -68px
        margin-left -68px
        margin-top 5px
        margin-bottom 50px
        &__item
            width (100/8)%
            font-size 25px
            display inline-block
            color white
            font-family 'BebasNeue'
            position relative
            &:first-of-type
                padding-left 33px
            &:last-of-type
                padding-right 33px
            &:hover, &:hover + .years__item, &--active, &--active + .years__item
                color red
            &:after
                position absolute
                content ""
                top -17px
                width 1px
                height 7px
                left 50%
                background-color blue2
            &:before
                width 50%
                height 100%
                content ""
                left 100%
                position absolute
    .preview
        margin-bottom 45px
        &__image
            width 100%
            height 226px
            background-size cover
            box-shadow inset 0 0 0 1px gray
            border 11px solid white
            margin-bottom 20px
            display block
            &:hover + .preview__title
                color red
        &__text
            color cyan
            font-size 15px
            line-height 22px

        &__title
            font-size 24px
            line-height 30px
            color white
            margin-bottom 20px
            display block
            &:hover
                color red
    iframe + p
        a
            color white
            border-line(alpha(@color, .5))
            &:hover
                color red
                border-line(alpha(@color, .5))
.divider
    display inline-block
    margin 60px 0
    border-bottom 3px solid red
    width 75px
    &--blue
        border-color blue2

.button
    middle()
    height 44px
    line-height 49px
    min-width 220px
    padding 0 45px
    text-transform uppercase
    font-family 'BebasNeue'
    font-size 20px
    background-color red
    text-align center
    color white
    letter-spacing 4px
    t all
    & + .button
        margin-left 20px
    &:hover, &:focus
        color white
        background-color alpha(red, .8)
        transform translateY(-5px)
        box-shadow 3px 4px 0 0 alpha(white, .2)
    &--blue
        background-color blue2
        & + .button
            margin-left 40px
        &:hover
        	background-color alpha(blue2, .8)
    &--orange
        background-color #ff9218
        &:hover
        	background-color alpha(#ff9218, .8)

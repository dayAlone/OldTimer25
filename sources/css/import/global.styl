title = 'FuturaOld', 'HelveticaNeue', 'Helvetica Neue', 'Arial', sans-serif

html, body
	height 100%
body
	font-family 'HelveticaNeue', 'Helvetica Neue', 'Arial', sans-serif
	min-height 100%
	color white
	background blue
	font-variant: normal
	min-width 1100px
	-webkit-font-smoothing: antialiased;
	&.open
		.overlay
			position fixed
			top 0
			left 0
			z-index 2
			width 100%
			height 100%

	background-repeat no-repeat
	background-position top center
	&.index
		background-image url(/layout/images/bg.enter.jpg)
	&.reasons
		background-color #083f68
		background-image url(/layout/images/bg.reasons.jpg)
	&.contacts
		background-color #8d1d00
		background-image url(/layout/images/bg.contacts.jpg)
		.text.row
			margin-bottom 65px
			.col-xs-4
				width 45%
				&:nth-child(1)
					width 27%
				&:nth-child(2)
					width 23.5%
				h4
					font-size 25px
					margin-bottom 20px
					font-weight 300
				a
					color white
					border-line(alpha(@color, .5))
					&:hover
						color cyan
						border-line(alpha(@color, .5))
	&.buy
		background-color #4f0a29
		background-image url(/layout/images/bg.buy.jpg)
	@media only screen and (max-width: 1100px)
		background-position -30px 0
	@media only screen and (-webkit-min-device-pixel-ratio: 1.25),
	only screen and ( min-device-pixel-ratio: 1.25),
	only screen and ( min-resolution: 200dpi),
	only screen and ( min-resolution: 1.25dppx)
		-webkit-font-smoothing: subpixel-antialiased;
a
	t all

.container
	width 990px

svg
	t fill
	path, g
		t fill

.scroll-fix
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	z-index 300000
	pointer-events none
	&--on
		pointer-events initial
